	package="br.com.jawsys.blocodroid" android:versionCode="1"
	android:versionName="1.0">
	<application android:icon="@drawable/icon" android:label="@string/app_name"
		android:persistent="true" android:debuggable="true">

		<activity android:name=".activities.Main" android:label="@string/app_name">
			<intent-filter>
				<action android:name="android.intent.action.MAIN" />
				<category android:name="android.intent.category.LAUNCHER" />
			</intent-filter>
		</activity>

		<activity android:name=".activities.PorBlocos" android:label="@string/botaoBloco" />
		<activity android:name=".activities.Opcoes" android:label="@string/botaoOpcoes" />
		<service android:name=".services.AvisaBlocosProximosService"></service>
		<activity android:name=".activities.PorDatas"></activity>
		<activity android:name=".activities.MostraBloco"></activity>
	</application>

	<uses-permission android:name="android.permission.INTERNET"></uses-permission>

	<uses-permission android:name="android.permission.STATUS_BAR"></uses-permission>

	<uses-library android:name="com.google.android.maps" />

</manifest>