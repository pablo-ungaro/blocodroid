<merge xmlns:android="http://schemas.android.com/apk/res/android">

	<RelativeLayout android:layout_width="fill_parent"
		android:layout_height="fill_parent">
		<ImageView android:scaleType="centerCrop" android:src="@drawable/fundo_amarelo"
			android:layout_width="wrap_content" android:layout_alignParentTop="true"
			android:layout_alignParentRight="true" android:layout_gravity="right"
			android:layout_height="fill_parent" />
	</RelativeLayout>

	<TextView android:id="@+id/descricaoFuncao"
		android:textSize="14dip" android:background="@drawable/rountedbox"
		android:textColor="#ffffff" android:width="140dip"
		android:layout_marginLeft="160dip" android:height="275dip"
		android:layout_marginTop="20dip" android:layout_gravity="left|top"
		android:visibility="gone"
		android:layout_width="wrap_content" android:layout_height="wrap_content" />

	<Button android:text="@string/botaoBloco" android:id="@+id/botaoBloco"
		android:textSize="16dip" android:textStyle="bold" android:background="@drawable/rountedbox"
		android:textColor="#ffffff" android:width="110dip"
		android:layout_marginLeft="20dip" android:height="35dip"
		android:layout_marginBottom="20dip" android:layout_gravity="left|bottom"
		android:layout_width="wrap_content" android:layout_height="wrap_content" />
	<Button android:text="@string/botaoData" android:id="@+id/botaoData"
		android:textSize="16dip" android:textStyle="bold" android:background="@drawable/rountedbox"
		android:textColor="#ffffff" android:height="35dip"
		android:layout_marginLeft="20dip" android:layout_marginBottom="80dip"
		android:layout_gravity="left|bottom" android:width="110dip"
		android:layout_width="wrap_content" android:layout_height="wrap_content" />
	<Button android:text="@string/botaoBairro" android:id="@+id/botaoBairro"
		android:background="@drawable/rountedbox" android:height="35dip"
		android:textColor="#ffffff" android:layout_marginLeft="20dip"
		android:textSize="16dip" android:textStyle="bold" android:width="110dip"
		android:layout_marginBottom="140dip" android:layout_gravity="left|bottom"
		android:layout_width="wrap_content" android:layout_height="wrap_content" />
	<Button android:text="@string/botaoFavoritos" android:id="@+id/botaoFavoritos"
		android:background="@drawable/rountedbox" android:height="35dip"
		android:textColor="#ffffff" android:layout_marginLeft="20dip"
		android:textSize="16dip" android:textStyle="bold" android:width="110dip"
		android:layout_marginBottom="200dip" android:layout_gravity="left|bottom"
		android:layout_width="wrap_content" android:layout_height="wrap_content" />
	<Button android:text="@string/botaoProximidade" android:id="@+id/botaoProximidade"
		android:background="@drawable/rountedbox" android:height="35dip"
		android:textColor="#ffffff" android:layout_marginLeft="20dip"
		android:textSize="16dip" android:textStyle="bold" android:width="110dip"
		android:layout_marginBottom="260dip" android:layout_gravity="left|bottom"
		android:layout_width="wrap_content" android:layout_height="wrap_content" />
		
	<Button android:text="@string/botaoMostraOpcoes" android:id="@+id/botaoMostraOpcoes"
		android:background="@drawable/rountedbox" android:height="35dip"
		android:textColor="#ffffff" android:layout_marginRight="20dip"
		android:textSize="16dip" android:textStyle="bold" android:width="110dip"
		android:layout_marginBottom="20dip" android:layout_gravity="right|bottom"
		android:layout_width="wrap_content" android:layout_height="wrap_content" />

	<Button android:layout_height="wrap_content"
		android:id="@+id/mostraTwitter"
		android:background="@drawable/rountedbox"
		android:layout_width="wrap_content"
		android:layout_gravity="left|top"
		android:textColor="#ffffff"
		android:textSize="18dip"
		android:textStyle="bold"
		android:layout_marginTop="20dip" 
		android:layout_marginLeft="20dip"
		android:text="@string/textoTwitter" />
</merge>
