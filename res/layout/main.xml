<merge xmlns:android="http://schemas.android.com/apk/res/android">

	<RelativeLayout android:layout_width="fill_parent"
		android:layout_height="fill_parent">
		<ImageView android:id="@+id/ImageView01" android:scaleType="centerCrop"
			android:src="@drawable/fundo_amarelo" android:layout_width="wrap_content"
			android:layout_alignParentTop="true" android:layout_alignParentRight="true"
			android:layout_gravity="right" android:layout_height="fill_parent">
		</ImageView>
	</RelativeLayout>

	<Button android:text="@string/botaoBloco" android:id="@+id/botaoBloco"
		android:textSize="18px" android:textStyle="bold" android:background="@drawable/rountedbox"
		android:textColor="#ffffff" android:width="160px"
		android:layout_marginLeft="20dip" android:height="45px"
		android:layout_marginBottom="30dip" android:layout_gravity="left|bottom"
		android:layout_width="wrap_content" android:layout_height="wrap_content"></Button>
	<Button android:text="@string/botaoData" android:id="@+id/botaoData"
		android:textSize="18px" android:textStyle="bold" android:background="@drawable/rountedbox"
		android:textColor="#ffffff" android:height="45px"
		android:layout_marginLeft="20dip" android:layout_marginBottom="100dip"
		android:layout_gravity="left|bottom" android:width="160px"
		android:layout_width="wrap_content" android:layout_height="wrap_content"></Button>
	<Button android:text="@string/botaoBairro" android:id="@+id/botaoBairro"
		android:background="@drawable/rountedbox" android:height="45px"
		android:textColor="#ffffff" android:layout_marginLeft="20dip"
		android:textSize="18px" android:textStyle="bold" android:width="160px"
		android:layout_marginBottom="170dip" android:layout_gravity="left|bottom"
		android:layout_width="wrap_content" android:layout_height="wrap_content"></Button>
	<Button android:text="@string/botaoFavoritos" android:id="@+id/botaoFavoritos"
		android:background="@drawable/rountedbox" android:height="45px"
		android:textColor="#ffffff" android:layout_marginLeft="20dip"
		android:textSize="18px" android:textStyle="bold" android:width="160px"
		android:layout_marginBottom="240dip" android:layout_gravity="left|bottom"
		android:layout_width="wrap_content" android:layout_height="wrap_content"></Button>
</merge>
