<RelativeLayout android:layout_width="fill_parent"
	android:layout_height="fill_parent" xmlns:android="http://schemas.android.com/apk/res/android">
	<TextView android:id="@+id/nomeBloco" android:layout_width="wrap_content"
		android:layout_height="wrap_content" android:text="TextView"
		android:textSize="22sp" android:textStyle="bold" android:textColor="#ffCCCC22"
		android:layout_alignParentTop="true" android:layout_alignParentLeft="true" />
	<TextView android:id="@+id/datasEnderecos"
		android:layout_alignLeft="@+id/nomeBloco" android:layout_below="@+id/nomeBloco"
		android:layout_width="fill_parent" android:layout_height="wrap_content"
		android:paddingBottom="8px" android:textSize="18sp" android:text="@string/datasEnderecos" />
	<ListView android:id="@+id/listaDatasHorarios"
		android:layout_alignLeft="@+id/datasEnderecos" android:layout_below="@+id/datasEnderecos"
		android:layout_width="fill_parent" android:layout_height="wrap_content" />
	<Button android:text="Mostrar no Mapa" android:layout_below="@+id/listaDatasHorarios"
		android:layout_width="wrap_content" android:layout_height="wrap_content"
		android:id="@+id/mostrarMapa" android:layout_alignLeft="@+id/listaDatasHorarios"
		android:layout_alignRight="@+id/listaDatasHorarios" />
</RelativeLayout>
