<?xml version="1.0" encoding="utf-8"?>

<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android">

	<PreferenceCategory android:title="First Category"
		android:key="first_category">

		<CheckBoxPreference android:key="perform_updates"
			android:summary="Ligar ou desligar notificação de blocos"
			android:title="Ligar Notificações" android:defaultValue="true" />

		<ListPreference android:key="updates_interval"
			android:title="Intervalo" android:summary="Freqüência das notificações"
			android:defaultValue="1000" android:entries="@array/updateInterval"
			android:entryValues="@array/updateIntervalValues" android:dependency="perform_updates" />

	</PreferenceCategory>

